<body >
<div id="app" ng-app="DashMod" ng-controller="DashCtrl"  ng-init="getUser()">

  <div class="app-content">

    <div class="main-content" >
      <div class="wrap-content container" id="container">
        <!-- start: PAGE TITLE -->
        <section id="page-title">
          <div class="row">
            <div class="col-sm-8">
              <h1 class="mainTitle">User Profile</h1>
            </div>
            <ol class="breadcrumb">
              <li>
                <span><a href="/logout" ng-click="logout()" class="btn btn-md btn-danger" >LOGOUT</a></span>
              </li>
              <li class="active">
                <span>Profil Utilisateur</span>
              </li>
            </ol>
          </div>
        </section>
        <!-- end: PAGE TITLE -->
        <!-- start: USER PROFILE -->
        <div class="container-fluid container-fullw bg-white">
          <div class="row">
            <div class="col-md-12">
              <div class="tabbable">
                <ul class="nav nav-tabs tab-padding tab-space-3 tab-blue" id="myTab4">
                  <li class="active">
                    <a data-toggle="tab" href="#panel_overview">
                      Aperçu
                    </a>
                  </li>
                  <li>
                    <a data-toggle="tab" href="#panel_edit_account" ng-click="editer()">
                      Editer
                    </a>
                  </li><li>
                    <a data-toggle="tab" href="#ss">
                      Sécurité
                    </a>
                  </li>
                </ul>
                <div class="tab-content">
                  <div id="panel_overview" class="tab-pane fade in active">
                    <div class="row">

<!-- ****************************************************************USER ACCOUNT *****************************************************************************************************************************-->

                      <div class="col-sm-5 col-md-4">
                        <div class="user-left">
                          <div class="center">
                            <h4>{{user.nom}}</h4>
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                              <div class="user-image">
                                <div class="fileinput-new thumbnail"><img src="http://www.gravatar.com/avatar/152fc9c9c01fd07835fe3644138075b7" alt="">
                                </div>
                                <div class="fileinput-preview fileinput-exists thumbnail"></div>
                                <div class="user-image-buttons">

                                  <a href="#" class="btn fileinput-exists btn-red btn-sm" data-dismiss="fileinput">
                                    <i class="fa fa-times"></i>
                                  </a>
                                </div>
                              </div>
                            </div>
                          </div>
                          <table class="table table-condensed">
                            <thead>
                            <tr>
                              <th colspan="3">Informations</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                              <td>Nom:</td>
                              <td>
                                 {{user.nom}}
                                </td>
                              <td><a href="#panel_edit_account" class="show-tab"><i class="fa fa-pencil edit-user-info"></i></a></td>
                            </tr>
                            <tr>
                              <td>Prenom:</td>
                              <td>
                                  {{user.prenom}}
                                </td>
                              <td><a href="#panel_edit_account" class="show-tab"><i class="fa fa-pencil edit-user-info"></i></a></td>
                            </tr>
                            <tr>
                              <td>Pseudo:</td>
                              <td>
                                  {{user.pseudo}}
                                </td>
                              <td><a href="#panel_edit_account" class="show-tab"><i class="fa fa-pencil edit-user-info"></i></a></td>
                            </tr>
                            <tr>
                              <td>email:</td>
                              <td>
                                  {{user.email}}
                                </td>
                              <td><a href="#panel_edit_account" class="show-tab"><i class="fa fa-pencil edit-user-info"></i></a></td>
                            </tr>
                            </tbody>
                          </table>
                          <table class="table">
                            <thead>
                            <tr>
                              <th colspan="3">Informations generales</th>
                            </tr>
                            </thead>
                            <tbody>

                            <tr>
                              <td>Creation du compte</td>
                              <td> Depuis {{(dateNow |date:'M') - (dateSub |date:'M') }} mois -
                                          {{(dateNow |date:'d') - (dateSub |date:'d') }} J -
                                          {{(dateNow |date:'H') - (dateSub |date:'H') }} H -
                                          {{(dateNow |date:'m') - (dateSub |date:'m') }} M -
                                          {{(dateSub |date:'s') - (dateNow |date:'s') }} S </td>
                              <td><a href="#panel_edit_account" class="show-tab"><i class="fa fa-pencil edit-user-info"></i></a></td>
                            </tr>
                            <tr>
                              <td>Url du gravatar</td>
                              <td>{{user.gravatarUrl |limitTo:40}}...</td>
                            </tr>
                            <tr>
                              <td>Supprimer le compte (totallement!)</td>
                              <td><a class="btn btn-sm btn-danger" ng-click="supprimerCompte()">Supprimer le compte</a></td>
                            </tr>
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>


                    <!-- ****************************************************************EDIT SECURITY *****************************************************************************************************************************-->

                  </div><div id="ss" class="tab-pane fade in">
                    <div class="row">
                      <div class="col-sm-5 col-md-4">
                        <div class="user-left">
                          <form action="#" role="form" id="form" name="myForm" ng-submit="changePassword()">

                            <fieldset>
                              <legend>Changer son mot de passe</legend>
                              <div class="row">
                                <div class="col-md6">
                                  <div class="form-group">
                                    <label class="control-label">
                                      Nouveau Password
                                    </label>
                                    <input type="password" ng-model="password" placeholder="password"  required="required" class="form-control" name="pw1" id="pw1">
                                  </div>
                                  <div class="form-group">
                                    <label class="control-label">
                                      Confirmer Password
                                    </label>
                                    <input type="password" pw-check="pw1" ng-model="pw2" placeholder="password" required="required"  class="form-control" id="pw2" name="pw2">
                                    <div class="msg-block" ng-show="myForm.$error"> <span class="msg-error" ng-show="myForm.pw2.$error.pwmatch" style="color: red">Les mots de passe ne correspondent pas</span>

                                    </div>
                                    <button class="btn btn-success pull-right"   ng-show="myForm.pw2.$error.pwmatch" ng-disabled="myForm.pw2.$error.pwmatch" type="submit">
                                      Update <i class="fa fa-arrow-circle-right"></i>
                                    </button>

                                    <button class="btn btn-success pull-right"  ng-show="!myForm.pw2.$error.pwmatch"  ng-disabled="myForm.pw2.$error.pwmatch" type="submit">
                                      Update <i class="fa fa-arrow-circle-right"></i>
                                    </button>


                                  </div>
                                </div>
                              </div>
                            </fieldset>
                          </form>

                        </div>
                      </div>

                      <!-- ****************************************************************EDIT ACCOUNT *****************************************************************************************************************************-->

                    </div>
                  </div>
                  <div id="panel_edit_account" class="tab-pane fade">
                    <form action="#" role="form" id="form" ng-submit="">
                      <fieldset>
                        <legend>
                          Informations
                        </legend>
                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <label class="control-label">
                                Nom*
                              </label>
                              <input type="text" placeholder="Peter" ng-model="user.nom" class="form-control" id="firstname" name="firstname">
                            </div>
                            <div class="form-group">
                              <label class="control-label">
                                Prenom*
                              </label>
                              <input type="text" placeholder="Clark" ng-model="user.prenom" class="form-control" id="lastname" name="lastname">
                            </div>
                            <div class="form-group">
                              <label class="control-label">
                                Email Address*
                              </label>
                              <input type="email" placeholder="peter@example.com" ng-model="user.email"  class="form-control" id="email" name="email">
                            </div>
                            <div class="form-group">
                              <label class="control-label">
                                Pseudo*
                              </label>
                              <input type="text" placeholder="pseudo" ng-model="user.pseudo" class="form-control" id="phone" name="email">
                            </div>
                            <button class="btn btn-primary pull-right" ng-click="editerUser()" type="submit">
                              Update <i class="fa fa-arrow-circle-right"></i>
                            </button>
                          </div>
                      <fieldset>
                        <legend>
                          Infos en +
                        </legend>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label class="control-label">
                              Password crypté
                              </label>
																	<span class="input-icon">
																		<input class="form-control" disabled ng-model="user.password" type="password" >
                                    <i class="fa fa-eye-slash"></i> </span>
                            </div>
                            <div class="form-group">
                              <label class="control-label">
                               Dernier login:
                              </label>
																	<span class="input-icon">
																		<input class="form-control" disabled ng-model="user.lastLoggedIn" type="text" >
                                    <i class="fa fa-eye"></i> </span>
                            </div>
                            <div class="form-group">
                              <label class="control-label">
                                Votre GravatarUrl
                              </label>
																	<span class="input-icon">
																		<input class="form-control" disabled ng-model="user.gravatarUrl" type="text" >
                                    <i class="fa fa-eye"></i> </span>
                            </div>
                            <div class="form-group">
                              <label class="control-label">
                                Créé le :
                              </label>
																	<span class="input-icon">
																		<input class="form-control" disabled ng-model="user.createdAt" type="text" >
                                    <i class="fa fa-eye"></i> </span>
                            </div>
                            <div class="form-group">
                              <label class="control-label">
                                Mise à jour :
                              </label>
																	<span class="input-icon">
																		<input class="form-control" disabled ng-model="user.updatedAt" type="text" >
                                    <i class="fa fa-eye"></i> </span>
                            </div>
                            <div class="form-group">
                              <label class="control-label">
                                Votre ID:
                              </label>
																	<span class="input-icon">
																		<input class="form-control" disabled ng-model="user.id" type="text" >
                                    <i class="fa fa-eye"></i> </span>
                            </div>
                          </div>
                      </fieldset>
                      <div class="row">
                        <div class="col-md-12">
                          <div>
                            *Champs requis
                            <hr>
                          </div>
                        </div>
                      </div>

                    </form>
                </div>

                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- end: USER PROFILE -->
      </div>
    </div>
  </div>




